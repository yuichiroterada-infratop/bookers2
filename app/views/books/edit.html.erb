<div class="container">
  <%= render "layouts/errors", obj: @book %>
  <div class="row">
    <div class="col-md-8 col-sm-12 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <%= f.label :title %></br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :Opinion %></br>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
      
      <%= link_to "Show", book_path(@book) %>
       | 
      <%= link_to "Back", books_path %>
      
    </div>
  </div>
</div>