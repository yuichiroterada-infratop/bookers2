  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <!--ルートボタン-->
      <a class="navbar navbar-brand p-3 text-light", href="/"><strong>Bookers</strong></a>
      <!--レスポンシブ対応したボタン-->
      <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-expanded="false" aria-label="Togle navigation">
        <sapan class="navbar-toggler-icon"></sapan>
      </button>
      
      <!--以下、ナビゲーション-->
      <div class="navbar-collapse collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user), class: "nav-link text-light" do %>
              <i class="fas fa-home"></i> Home
            <% end %>
          </li>
          
          <li>
            <%= link_to users_path, class: "nav-link text-light" do %>
              <i class="fas fa-users"></i> Users
            <% end %>
          </li>
          
          <li>
            <%= link_to books_path, class: "nav-link text-light" do %>
              <i class="fas fa-book-open"></i> Books
            <% end %>
          </li>
          
          <li>
